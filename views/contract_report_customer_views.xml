<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_search_filter_contract_customer" model="ir.ui.view">
        <field name="model">contract.contract</field>
        <field name="arch" type="xml">
            <search string="Clientes">
                <group expand="0" string="Group By">
                    <filter string="Partner" name="partner_id" context="{'group_by': 'partner_id'}"/>
                    <filter string="MP Flujo" name="mp_flujo_id" context="{'group_by': 'mp_flujo_id'}"/>
                    <filter string="Fecha Inicio" name="date_start" context="{'group_by': 'date_start'}"/>
                    <filter string="Fecha Fin" name="date_end" context="{'group_by': 'date_end'}"/>
                    <filter string="Proxima Facturación" name="recurring_next_date" context="{'group_by': 'recurring_next_date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_contract_mod_customer_tree_view" model="ir.ui.view">
        <field name="name">view.contract.mod.customer.tree.view</field>
        <field name="model">contract.contract</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Contrato"/>
                <field name="partner_id" string="Proveedor"/>
                <field name="journal_id" string="Diario Contable"/>
                <field name="journal_account_id" string="Cuenta Contable"/>
                <field name="tag_ids" widget="many2many_tags" string="Etiquetas"/>
                <field name="mp_flujo_id"/>
                <field name="date_start" string="Inicio"/>
                <field name="date_end" string="Fin"/>
                <field name="recurring_next_date" string="Proxima Facturación"/>
            </tree>
        </field>
    </record>

    <record id="action_contract_report_customer_view_tree" model="ir.actions.act_window">
        <field name="name">Contratos Clientes</field>
        <field name="res_model">contract.contract</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('contract_type', '=', 'sale')]</field>
        <field name="search_view_id" ref="view_search_filter_contract_customer"/>
        <field name="view_id" ref="view_contract_mod_customer_tree_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">¡No hay contratos registrados!</p>
        </field>
    </record>

</odoo>